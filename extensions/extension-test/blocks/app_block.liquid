<span style="color: {{ block.settings.color }}">
  {% comment %} <h1>{{ shop.name }}</h1> {% endcomment %}
  <br/>
  <nav class="customNav">
    {% for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </nav>
</span>

{% comment %} JSON //----------------------------------------------------------------------------------------------------------------- {% endcomment %}

{% render "app_snippet" %}
{% schema %}
  {
    "name": "Hello World",
    "target": "section",
    "stylesheet": "app.css",
    "javascript": "app.js",
    "settings": [
      {
        "label": "Color",
        "id": "color",
        "type": "color",
        "default": "#000000"
      }
    ]
  }
{% endschema %}

